{
  "name": "sejarah-kota-pekanbaru",
  "version": "1.0.0",
  "description": "Website Sejarah Kota Pekanbaru - Kota Bertuah di Jantung Sumatera",
  "main": "index.html",
  "scripts": {
    "start": "live-server --port=3000 --open=index.html",
    "dev": "live-server --port=3000 --open=index.html --watch=*.html,*.css,*.js",
    "serve": "http-server -p 8080 -o",
    "build": "npm run minify:css && npm run minify:js",
    "minify:css": "cleancss -o dist/style.min.css style.css",
    "minify:js": "terser script.js -o dist/script.min.js --compress --mangle",
    "lint:css": "stylelint '**/*.css'",
    "format": "prettier --write '**/*.{html,css,js,json}'",
    "validate": "html-validator --file=index.html",
    "deploy": "gh-pages -d .",
    "test": "echo \"No tests specified\" && exit 0"
  },
  "keywords": [
    "pekanbaru",
    "sejarah",
    "riau",
    "indonesia",
    "kota-bertuah",
    "website",
    "landing-page"
  ],
  "author": "Pemerintah Kota Pekanbaru",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/sejarah-kota-pekanbaru.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/sejarah-kota-pekanbaru/issues"
  },
  "homepage": "https://your-username.github.io/sejarah-kota-pekanbaru",
  "devDependencies": {
    "live-server": "^1.2.2",
    "http-server": "^14.1.1",
    "clean-css-cli": "^5.6.3",
    "terser": "^5.31.0",
    "prettier": "^3.2.5",
    "stylelint": "^16.2.1",
    "stylelint-config-standard": "^36.0.0",
    "html-validator-cli": "^8.0.0",
    "gh-pages": "^6.1.1"
  },
  "dependencies": {},
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ]
}